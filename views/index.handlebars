<div class="container">
	<div class="row">
		<div class="col-md-12 text-center" id="top-bar">
			<h1>Welcome to the Krusty Krab!</h1>
		</div>
		<div class="col-md-6 text-center" class="task" id="ate">
			<div class="row">
			  {{#each burger_data}}
			  	{{#unless this.devoured}}
				<div class="col-md-9 text-center" id="readytoeat">
					<pre id="ready">{{this.id}}. {{this.burger_name}}
					</pre>
				  		<!-- {{this.Date}} -->
				</div>
				<div class="col-md-3 text-center">
					<form class="devour-form button-size">
						<input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						<button type="submit" class="btn btn-default" id="eatit">EAT IT!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-md-6 text-center" class="task" id="devouredimg">
			  {{#each burger_data}}
			  	{{#if this.devoured}}
			  		<input class="form-control" type="text" id="devoured" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-12 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-danger" id="text-enter-button">Submit</button>
			</form>
			<p id="instructions">Submit a Burger you would like to eat! But remember not to eat too much; they go straight to your thighs!</p>
		</div>
	</div>
</div>
