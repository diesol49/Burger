<div class="container">
	<div class="row">
		<div class="col-md-6">
			<h2>Burgers Ready to Eat!</h2>
			<ul>
				{{#each burgers}}
				{{#unless devoured}}
				{{>burgers/burger-block devoured=true}}
				{{/unless}}
				{{/each}}
			</ul>
		</div>
	</div>
	<div class="col-md-6">
		<h2>Burgers You've Ate!</h2>
		<ul>
			{{#each burgers}}
			{{#if devoured}}
			{{>burgers/burger-block devoured=false}}
			{{/if}}
			{{/each}}
		</ul>
	</div>

	<div class="row">
		<div class="col-md-4"></div>
		<div class="col-md-4">
			<div class="order-container">
				<h2>Order A Burger</h2>
				<form class="create-form">

					<div class="form-group">
						<label for="ca">Burger Name:</label>
						<input type="text" id="ca" name="burger_name" placeholder="Order a Burger">
					</div>

					<button type="submit">Place Order</button>
				</form>
			</div>
		</div>
	</div>
</div>